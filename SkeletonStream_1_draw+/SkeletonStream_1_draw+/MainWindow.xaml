<Window x:Class="SkeletonStream_1_draw_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkeletonStream_1_draw_"
        mc:Ignorable="d"
        Title="Draw Skeleton -- by 雪庆" Height="960" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Image x:Name="ColorImageElement" Opacity="1" Width="1280" Height="960" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="DepthImage" Opacity="1" Width="2560" Margin="50,20,0,0" Height="1920"/>
        </StackPanel>
        <Grid x:Name="LayoutRoot" Background="#00000000" Opacity="1" Width="1280" Height="960"/>
        <Grid Background="White" Width="51" Height="960" HorizontalAlignment="Left"></Grid>
        <Grid  Background="White" Width="1280" Height="21" VerticalAlignment="Top"></Grid>
    </Grid>
</Window>

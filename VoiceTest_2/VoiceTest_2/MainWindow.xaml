<Window x:Class="VoiceTest_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoiceTest_2"
        mc:Ignorable="d"
        Title="Where are you -- by:雪庆" Height="350" Width="525" Background="AntiqueWhite">
    <Grid>
        <Rectangle Fill="BlueViolet" HorizontalAlignment="Left" Margin="240,41,0,39" Stroke="BlanchedAlmond" Width="10" RenderTransformOrigin="0.5,0">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <ScaleTransform/>
                    <RotateTransform Angle="{Binding BeamAngle}"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</Window>

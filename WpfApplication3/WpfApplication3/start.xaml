        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication3"
        mc:Ignorable="d"
        Title="开始测试" Height="350" Width="525">
  <Grid>
        <TextBlock x:Name="areyou" Text="Are you SB？" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button x:Name="button_1" Content="是" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,160,20" Click="Button_1_MoveOn"/>
        <Button x:Name="button_2" Content="不是" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" MouseEnter="button_2_MouseEnter" Click="button_2_Click"/>
